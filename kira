#!/usr/bin/env python3
"""
Wrapper скрипт для Kira CLI
"""
import sys
from pathlib import Path

# Добавляем src в путь
sys.path.insert(0, str(Path(__file__).parent / "src"))

# Импортируем и запускаем CLI
from kira.cli.kira_ext import main as ext_main
from kira.cli.kira_inbox import main as inbox_main
from kira.cli.kira_calendar import main as calendar_main
from kira.cli.kira_rollup import main as rollup_main
from kira.cli.kira_code import main as code_main

def main():
    if len(sys.argv) < 2:
        print("Использование: kira <команда> [аргументы]")
        print("Команды: inbox, calendar, rollup, code, ext")
        return 1

    command = sys.argv[1]
    args = sys.argv[2:]

    if command == "inbox":
        return inbox_main(args)
    elif command == "calendar":
        return calendar_main(args)
    elif command == "rollup":
        return rollup_main(args)
    elif command == "code":
        return code_main(args)
    elif command == "ext":
        return ext_main(args)
    else:
        print(f"Неизвестная команда: {command}")
        return 1

if __name__ == "__main__":
    sys.exit(main())
