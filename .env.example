# Kira Agent Configuration Example
# Copy this file to .env and fill in your values

# ============================================================================
# LLM Provider API Keys
# ============================================================================

# Anthropic (Claude) - Best for planning and reasoning
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# OpenAI (GPT-4) - Best for JSON structuring
OPENAI_API_KEY=sk-...
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

# OpenRouter (100+ models) - Good fallback
OPENROUTER_API_KEY=sk-or-...
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# Ollama (Local) - Free fallback, requires: ollama serve
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3

# ============================================================================
# LLM Router Configuration
# ============================================================================

# Which provider for which task type
KIRA_PLANNING_PROVIDER=anthropic    # planning → Claude
KIRA_STRUCTURING_PROVIDER=openai    # JSON → GPT-4
KIRA_DEFAULT_PROVIDER=openrouter    # fallback
KIRA_ENABLE_OLLAMA_FALLBACK=true    # Use Ollama when others fail

# ============================================================================
# Executor Selection (Phase 1-3 Integration)
# ============================================================================

# LangGraph is the default and recommended executor for all NL interactions
# It provides: plan → reflect → tool → verify workflow with full observability
KIRA_EXECUTOR_TYPE=langgraph        # Default: langgraph (legacy available for debugging)

# LangGraph options (only used if executor_type=langgraph)
KIRA_LANGGRAPH_REFLECTION=true      # Enable reflect node (safety review)
KIRA_LANGGRAPH_VERIFICATION=true    # Enable verify node (result validation)
KIRA_LANGGRAPH_MAX_STEPS=10         # Maximum execution steps

# ============================================================================
# Agent Behavior
# ============================================================================

KIRA_MAX_TOOL_CALLS=10
KIRA_MAX_TOKENS=4000
KIRA_TIMEOUT=60.0
KIRA_TEMPERATURE=0.7

# ============================================================================
# Features
# ============================================================================

# RAG (Retrieval-Augmented Generation)
KIRA_ENABLE_RAG=false
KIRA_RAG_INDEX_PATH=.kira/rag_index.json

# Memory
KIRA_MEMORY_MAX_EXCHANGES=3

# ============================================================================
# Telegram Integration
# ============================================================================

TELEGRAM_BOT_TOKEN=
ENABLE_TELEGRAM_WEBHOOK=false

# ============================================================================
# Service
# ============================================================================

KIRA_HOST=0.0.0.0
KIRA_PORT=8000

# Vault path
KIRA_VAULT_PATH=./vault

# ============================================================================
# Quick Start Configurations
# ============================================================================

# For Development (Ollama only, no API keys):
# KIRA_EXECUTOR_TYPE=langgraph
# KIRA_ENABLE_OLLAMA_FALLBACK=true
# (All API keys empty)

# For Production (Full LangGraph with all providers):
# KIRA_EXECUTOR_TYPE=langgraph
# KIRA_LANGGRAPH_REFLECTION=true
# KIRA_LANGGRAPH_VERIFICATION=true
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...
# KIRA_ENABLE_OLLAMA_FALLBACK=true

# For Telegram Bot with LangGraph:
# KIRA_EXECUTOR_TYPE=langgraph
# TELEGRAM_BOT_TOKEN=your_bot_token_here
# ANTHROPIC_API_KEY=sk-ant-...

