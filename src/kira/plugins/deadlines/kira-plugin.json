{
  "name": "kira-deadlines",
  "version": "0.1.0",
  "displayName": "Deadline Tracker",
  "description": "Surfaces upcoming deadlines and schedules reminders via the core scheduler.",
  "publisher": "kira",
  "engines": { "kira": "^1.0.0" },
  "permissions": ["scheduler.create", "events.subscribe"],
  "entry": "kira_plugin_deadlines.plugin:activate",
  "capabilities": ["schedule", "notify"],
  "contributes": {
    "events": ["task.created", "deadline.updated"],
    "commands": ["deadlines.sync"]
  },
  "sandbox": { "strategy": "subprocess", "timeoutMs": 15000 }
}
