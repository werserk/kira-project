{
  "name": "kira-mailer",
  "version": "0.1.0",
  "displayName": "Mailer Bridge",
  "description": "Sends actionable notifications and digests over external email channels.",
  "publisher": "kira",
  "engines": { "kira": "^1.0.0" },
  "permissions": ["net", "secrets.read", "events.publish"],
  "entry": "kira_plugin_mailer.plugin:activate",
  "capabilities": ["notify", "push"],
  "contributes": {
    "events": ["notification.requested"],
    "commands": ["mailer.send"]
  },
  "sandbox": { "strategy": "subprocess", "timeoutMs": 20000 }
}
