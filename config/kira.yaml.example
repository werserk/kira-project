# Kira User Configuration Example
# Copy this file to kira.yaml in project root and customize
# This file overrides defaults from config/defaults.yaml

# Vault settings
vault:
  path: "vault"  # Path to your vault directory
  # inbox_folder: "inbox"  # Uncomment to override default
  # processed_folder: "processed"

# Core system
core:
  timezone: "Europe/Brussels"  # Your local timezone
  # date_format: "%Y-%m-%d"

# Enabled plugins
plugins:
  enabled:
    - kira-inbox
    - kira-calendar
    - kira-deadlines
    # - kira-code
    # - kira-mailer
  
  # Plugin-specific settings
  inbox:
    confidence_threshold: 0.8  # Lower = more clarifications
    clarification_timeout_hours: 24.0
  
  calendar:
    default_calendar_id: "primary"  # or your calendar ID
    sync_days_past: 7
    sync_days_future: 30
    timebox_default_minutes: 25  # Pomodoro
  
  deadlines:
    warning_days: [7, 3, 1]  # Warn 7, 3, 1 day(s) before
    snooze_default_hours: 24

# Adapters
adapters:
  telegram:
    enabled: true  # Set to false to disable
    mode: "bot"  # bot or userbot
    # Bot token is read from TELEGRAM_BOT_TOKEN env var
    whitelist_chats: []  # Empty = all chats, or ["chat_id1", "chat_id2"]
  
  gcal:
    enabled: true
    # Credentials path from GCAL_CREDENTIALS_PATH env var
    timeout_seconds: 30

# Logging
logging:
  level: "INFO"  # DEBUG for development, INFO for production
  path: "logs"
  console_output: true  # Print to console
  file_output: true  # Write to files

# Sandbox (advanced)
# sandbox:
#   timeout_ms: 30000  # 30 seconds
#   memory_limit_mb: 512
#   max_restarts: 3

# Performance (advanced)
# performance:
#   cache:
#     enabled: true
#     max_size_mb: 100
#   concurrency:
#     max_workers: 4

# Security (advanced)
# security:
#   permissions:
#     default_deny: true
#     audit_log: true
#   sandbox:
#     network_default: false
#     fs_write_default: false

# Feature flags
features:
  timeboxing: true  # Auto-create calendar blocks for tasks
  clarifications: true  # Ask for confirmation on uncertain items
  auto_rollup: true  # Auto-generate daily/weekly rollups
  graph_validation: true  # Validate knowledge graph
  telemetry: true  # Structured logging
  metrics: false  # Export Prometheus metrics (future)

# Development (for contributors)
dev:
  debug: false
  hot_reload: false
  profiling: false
  test_mode: false

