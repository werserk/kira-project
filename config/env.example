# Kira Environment Variables Example
# Copy this file to .env in project root and fill in your values
# These variables override config/defaults.yaml and kira.yaml

# Core Settings
KIRA_VAULT_PATH=vault
KIRA_TIMEZONE=Europe/Brussels

# Logging
KIRA_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
KIRA_LOG_PATH=logs

# Sandbox
KIRA_SANDBOX_TIMEOUT=30000  # milliseconds
KIRA_SANDBOX_MEMORY_LIMIT=512  # MB

# Configuration File Path
KIRA_CONFIG=kira.yaml

# Telegram Adapter (if enabled)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_MODE=bot  # bot or userbot

# Google Calendar Adapter (if enabled)
GCAL_CREDENTIALS_PATH=.credentials/gcal_credentials.json
GCAL_TOKEN_PATH=.credentials/gcal_token.json
GCAL_CALENDAR_ID=primary

# Security & Secrets
KIRA_SECRETS_PATH=.secrets/keyring.json
KIRA_ENCRYPTION_KEY=  # Leave empty to generate, or provide base64 key

# Database (future)
# KIRA_DB_PATH=.kira/db.sqlite

# Feature Flags
KIRA_FEATURE_TIMEBOXING=true
KIRA_FEATURE_CLARIFICATIONS=true
KIRA_FEATURE_AUTO_ROLLUP=true

# Development
KIRA_DEV_DEBUG=false
KIRA_DEV_HOT_RELOAD=false
KIRA_DEV_TEST_MODE=false
KIRA_DEV_MOCK_APIS=false

# Performance
KIRA_CACHE_ENABLED=true
KIRA_CACHE_SIZE_MB=100
KIRA_MAX_WORKERS=4

# API Keys (for external services)
OPENAI_API_KEY=  # If using AI features
ANTHROPIC_API_KEY=  # Alternative AI provider

# Network
HTTP_PROXY=  # Optional HTTP proxy
HTTPS_PROXY=  # Optional HTTPS proxy
NO_PROXY=localhost,127.0.0.1

# Monitoring (optional)
SENTRY_DSN=  # Sentry error tracking
PROMETHEUS_PORT=  # Prometheus metrics endpoint

